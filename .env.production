# Production Environment Variables Template for NovaBot
# Copy this file to .env and fill in your actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_NAME=novagent
DATABASE_USER=novabot
DATABASE_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_HERE
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@postgres:5432/${DATABASE_NAME}

# ============================================
# Groq API Configuration
# ============================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ============================================
# Agent Configuration
# ============================================
AGENT_NAME=NovaBot
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=1024

# ============================================
# WhatsApp Configuration
# ============================================
# Whitelist: Daftar nomor WA yang diizinkan chat dengan bot (pisahkan dengan koma)
# Format: 62812345678@c.us,62898765432@c.us
# Kosongkan untuk menerima semua nomor
WA_WHITELIST=

# Internal team numbers (dapat akses command CRM)
# Format sama seperti WA_WHITELIST
WA_INTERNAL_NUMBERS=

# Enable/disable WhatsApp whitelist (true/false)
WA_WHITELIST_ENABLED=false

# Session name untuk WhatsApp (jika ingin multiple instance)
WA_SESSION_NAME=novabot-production

# ============================================
# Dashboard Configuration
# ============================================
# Note: Container listens on 5000, but exposed to host on 5001
# to avoid conflict with TrustBridge Backend
DASHBOARD_PORT=5000

# Frontend API URL (used during build)
VITE_API_URL=https://novabot.izcy.tech/api/dashboard

# ============================================
# Node Environment
# ============================================
NODE_ENV=production
