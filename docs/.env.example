# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Model Configuration
GROQ_MODEL=llama-3.1-8b-instant

# Agent Configuration
AGENT_NAME=NovaBot
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=1024

# WhatsApp Configuration
# Whitelist nomor WA yang diizinkan chat dengan bot (pisahkan dengan koma)
# Format: 62812345678@c.us,62898765432@c.us
# Kosongkan untuk menerima semua nomor
WA_WHITELIST=62812345678@c.us,62898765432@c.us
WA_INTERNAL_NUMBERS=

# Enable/disable WhatsApp whitelist (true/false)
WA_WHITELIST_ENABLED=true

# Session name untuk WhatsApp (jika ingin multiple instance)
WA_SESSION_NAME=novabot-session
