# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Model Configuration
GROQ_MODEL=llama-3.1-8b-instant

# Agent Configuration
AGENT_NAME=NovaBot
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=1024

# WhatsApp Configuration
# Whitelist nomor WA yang diizinkan chat dengan bot (pisahkan dengan koma)
# Format: 62812345678@c.us,62898765432@c.us
# Kosongkan untuk menerima semua nomor
WA_WHITELIST=62812345678@c.us,62898765432@c.us
WA_INTERNAL_NUMBERS=

# Enable/disable WhatsApp whitelist (true/false)
WA_WHITELIST_ENABLED=true

# Session name untuk WhatsApp (jika ingin multiple instance)
WA_SESSION_NAME=novabot-session

# ============================================
# Google Calendar Integration
# ============================================
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_CALENDAR_ID=primary
CALENDAR_SYNC_INTERVAL=15  # Minutes between syncs

# ============================================
# External CRM Integration
# ============================================
EXTERNAL_CRM_ENABLED=false
EXTERNAL_CRM_API_URL=https://your-crm.com/api/contacts
EXTERNAL_CRM_API_KEY=your_external_crm_api_key_here
EXTERNAL_CRM_SYNC_MODE=webhook  # 'webhook' or 'polling'
EXTERNAL_CRM_SYNC_INTERVAL=30  # Minutes (for polling mode)
EXTERNAL_CRM_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# API Authentication (for external access)
# ============================================
API_AUTH_ENABLED=true
CRM_API_KEY=your_novagent_api_key_here  # Key for external systems to access NovAgent API
RATE_LIMIT_ENABLED=true
